---
interface Props {
  name: string;
  dates: string;
  school: string;
  concepts: string[];
  peaceUtility: string;
  imagePlaceholder?: string;
  index: number;
}

const { name, dates, school, concepts, peaceUtility, imagePlaceholder, index } = Astro.props;
const base = import.meta.env.BASE_URL;

// Map schools to colors
const schoolColors: Record<string, string> = {
  'Cinismo': 'var(--color-cynicism)',
  'Epicureísmo': 'var(--color-epicureanism)',
  'Estoicismo': 'var(--color-stoicism)',
  'Escepticismo': 'var(--color-skepticism)',
  'Eclecticismo': 'var(--color-eclecticism)',
  'Neoplatonismo': 'var(--color-neoplatonism)'
};

const schoolColor = schoolColors[school] || 'var(--color-accent)';
const imageSrc = imagePlaceholder ? `${base}${imagePlaceholder}` : `${base}/images/philosophers/placeholder.png`;
---

<div class="timeline-card" data-index={index} style={`--school-color: ${schoolColor}`}>
  <div class="card-inner">
    <!-- Frente: Imagen del filósofo -->
    <div class="card-front">
      <img src={imageSrc} alt={`${name} - ${school}`} />
      <div class="school-badge" style={`background: ${schoolColor}`}>
        {school}
      </div>
    </div>
    
    <!-- Atrás: Información -->
    <div class="card-back" style={`background: linear-gradient(135deg, ${schoolColor}, color-mix(in srgb, ${schoolColor} 70%, black))`}>
      <div class="card-back-content">
        <h3>{name}</h3>
        <p class="dates">{dates}</p>
        
        <div class="concepts">
          <h4>Conceptos Clave</h4>
          <ul>
            {concepts.map(concept => <li>{concept}</li>)}
          </ul>
        </div>
        
        <div class="peace-utility">
          <h4>Utilidad para la Paz</h4>
          <p>{peaceUtility}</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .timeline-card {
    min-width: 350px;
    max-width: 350px;
    height: 500px;
    perspective: 1000px;
    scroll-snap-align: center;
  }
  
  .card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 0.6s;
    transform-style: preserve-3d;
  }
  
  .timeline-card:hover .card-inner {
    transform: rotateY(180deg);
  }
  
  .card-front,
  .card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    overflow: hidden;
  }
  
  /* FRENTE - Imagen */
  .card-front {
    background: var(--color-surface);
    z-index: 2;
  }
  
  .card-front img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  
  .school-badge {
    position: absolute;
    top: var(--spacing-md);
    right: var(--spacing-md);
    padding: var(--spacing-xs) var(--spacing-md);
    color: white;
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-md);
  }
  
  /* ATRÁS - Información */
  .card-back {
    transform: rotateY(180deg);
    color: white;
    z-index: 1;
  }
  
  .timeline-card:hover .card-front {
    z-index: 1;
  }
  
  .timeline-card:hover .card-back {
    z-index: 2;
  }
  
  .card-back-content {
    padding: var(--spacing-lg);
    height: 100%;
    overflow-y: auto;
  }
  
  .card-back h3 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-xs);
    color: white;
  }
  
  .card-back .dates {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: var(--spacing-md);
  }
  
  .card-back h4 {
    font-size: 1rem;
    margin-bottom: var(--spacing-sm);
    margin-top: var(--spacing-md);
    color: white;
    font-weight: 600;
  }
  
  .card-back ul {
    list-style: none;
    margin-bottom: var(--spacing-md);
  }
  
  .card-back li {
    padding: var(--spacing-xs) 0;
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.9rem;
    padding-left: 1.2em;
    position: relative;
  }
  
  .card-back li::before {
    content: "•";
    color: white;
    font-weight: bold;
    position: absolute;
    left: 0;
  }
  
  .card-back .peace-utility p {
    font-size: 0.9rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.95);
    margin: 0;
  }
  
  /* Scrollbar para el contenido de atrás */
  .card-back-content::-webkit-scrollbar {
    width: 6px;
  }
  
  .card-back-content::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
  }
  
  .card-back-content::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.3);
    border-radius: 3px;
  }
  
  .card-back-content::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.5);
  }
  
  @media (max-width: 768px) {
    .timeline-card {
      min-width: 300px;
      max-width: 300px;
      height: 450px;
    }
  }
</style>
